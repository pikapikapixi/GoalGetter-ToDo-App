{
  "name": "@mocko/proxy",
  "version": "1.2.1",
  "description": "Mocko proxy service, serves mocks or proxies requests to your endpoint when no mock is defined.",
  "main": "dist/main",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "node dist/main",
    "start:dev": "nodemon --config nodemon.json",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabriel-pinheiro/mocko.git"
  },
  "author": "Gabriel Pinheiro <gabrielctpinheiro@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gabriel-pinheiro/mocko/issues"
  },
  "homepage": "https://github.com/gabriel-pinheiro/mocko#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/h2o2": "^9.0.1",
    "@hapi/hapi": "^19.1.1",
    "dotenv": "^8.2.0",
    "fs": "0.0.1-security",
    "handlebars": "^4.7.6",
    "handlebars-helpers": "^0.10.0",
    "hcl-parser": "^0.1.1",
    "inversify": "^5.0.1",
    "ioredis": "^4.17.3",
    "laabr": "^6.1.1",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/handlebars": "^4.1.0",
    "@types/handlebars-helpers": "^0.5.2",
    "@types/hapi": "^18.0.3",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__h2o2": "^8.3.1",
    "@types/hapi__hapi": "^19.0.3",
    "@types/ioredis": "^4.16.6",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
